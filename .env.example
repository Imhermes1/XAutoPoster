# X (Twitter) API â€” OAuth 1.0a credentials
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=

# OpenRouter API
OPENROUTER_API_KEY=

# REQUIRED: LLM model for content analysis and generation
# Must match an OpenRouter model name: https://openrouter.ai/models
LLM_MODEL=google/gemini-2.0-flash-exp:free

# Supabase (server-side only)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# REQUIRED: Protects /api/cron/automation and /api/cron/post endpoints
# Generate a strong random secret (e.g., using: openssl rand -hex 32)
# This secret must be configured in GitHub Actions secrets as CRON_SECRET
CRON_SECRET=your-random-secret-here

# Scheduler preferences (can be customized via the Settings tab)
POSTING_TIMES=9,13,18
RANDOMIZE_MINUTES=15
DAILY_POST_LIMIT=2

# Admin UI
ADMIN_PASSWORD=
ADMIN_SECRET=
ADMIN_BYPASS=
